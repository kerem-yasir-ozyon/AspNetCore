<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action ="Index" class="nav-link " aria-current="page" >Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Lesson" asp-action="Index" a class="nav-link">Hakkimizda</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Student" asp-action="Index" a class="nav-link">Iletişim</a>
                    </li>
                    <li class="nav-item active">
                        <a asp-controller="Teacher" asp-action="Index" a class="nav-link">Projeler</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        @RenderBody()
    </div>

</body>
</html>
