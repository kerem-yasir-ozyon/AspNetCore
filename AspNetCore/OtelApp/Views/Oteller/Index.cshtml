@model IEnumerable<OtelApp.Data.Entities.Otel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtelTuru)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YildizSayisi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
